<div class="petsContainer">
  <mat-sidenav-container>
    <mat-sidenav #sidenav mode="side" [(opened)]="opened">
      <div class="container">
        <div class="filter-item">
          <mat-label>Breeds</mat-label>
          <mat-form-field appearance="fill">
            <mat-label>Select</mat-label>
            <mat-select [formControl]="filterBreeds" multiple>
              <mat-select-trigger>
                {{filterBreeds.value?.[0] || ''}}
                <span
                  *ngIf="(filterBreeds.value?.length || 0) > 1"
                  class="example-additional-selection"
                >
                  (+{{ (filterBreeds.value?.length || 0) - 1 }}
                  {{ filterBreeds.value?.length === 2 ? "other" : "others" }})
                </span>
              </mat-select-trigger>
              <mat-option *ngFor="let breed of breedList" [value]="breed">{{
                breed
              }}</mat-option>
            </mat-select>
          </mat-form-field>
        </div>

        <div class="filter-item">
          <mat-label>Ages</mat-label>
